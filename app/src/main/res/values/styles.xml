<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PostTitleStyle">
        <item name="android:textColor">@color/colorTextHeader</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeHeader</item>
    </style>

    <style name="PostBodyStyle">
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>

    <style name="PostAuthorStyle">
        <item name="android:textColor">@color/colorTextAuthor</item>
        <item name="android:textSize">@dimen/textSizeAuthor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostButtonStyle">
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
